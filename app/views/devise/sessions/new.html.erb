<div class="container">
  <div class="row">
    <div class="col-xs-12 col-lg-5 col-sm-4 col-sm-offset-4">
      <div class="login_form">

        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class=" form-control ">
            <div class=" form-group ">
            Email
              <%= f.input :email, label: false, required: false, autofocus: true, placeholder: "bob@gmail.com", class: "form-control" %>
            </div>
            <div class="form-group ">
            Password
              <%= f.input :password, label: false, required: false, placeholder: "••••••", class: "form-control"  %>
            </div>
            <div class="form-check">
              <%= f.input :remember_me, as: :boolean, class: "form-control"   if devise_mapping.rememberable?%>
            </div>

            <div class="form-actions ">
              <%= f.button :submit, "Log in", class: "btn-login-custom form-control"  %>

            </div>
             <% end %>
            <div>
              <%= render "devise/shared/links" %>
            </div>
          </div>

      </div>

    </div>
  </div>
</div>


