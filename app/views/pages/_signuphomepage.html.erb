      <div class="login_form">
        <div class="login-form-header col-md-12">
          <h2>Sign up to get started</h2>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

          <div class=" form-control ">
            <div class=" form-group ">
            Email: <%= f.input :email, label: false, required: false, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group ">
            Password: <%= f.input :password, label: false, required: true, placeholder: "6 characters minimum" %>
            Password Confirmation: <%= f.input :password_confirmation, label: false, required: true %>
            </div>
            <div class="form-actions ">
              <%= f.button :submit, "Sign Up & Continue", class: "btn-lg btn-login-custom form-control"  %>

            </div>
             <% end %>
<!--             <div>
              <%#= render "devise/shared/links" %>
            </div> -->
          </div>
      </div>
