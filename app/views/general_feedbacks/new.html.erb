
<div class="container legislationshow">
  <h1 class="display-4"><%= @consultation.legislation.title %></h1>
  <p class="lead">Please provide your feedback based on what you've read, take into account all three sections and the overall objective of the vision</p>

<div class="form-group feedback">
  <%= simple_form_for [@consultation, @general_feedback] do |f| %>
  <%= f.text_area :content, :rows => 5, :class => 'form-control', :required => true %>
  <%= f.submit "Submit & Finish", :class => 'btn-primary btn-lg' %>
  <% end %>
</div>

<%= link_to 'Back to Consultation', legislation_path(1) %>

</div>
